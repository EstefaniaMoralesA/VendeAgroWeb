@model VendeAgroWeb.Models.Administrador.SubcategoriasViewModel

@{
    foreach (var item in Model.Subcategorias)
    {
        <li><a data-id="@item.Id">@item.Nombre</a></li>
    }
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("#subcategoria-dropdown li a").click(function () {
        $("#btn-subcategoria:first-child").html($(this).text() + '<span class="caret"></span>');
    });
</script>