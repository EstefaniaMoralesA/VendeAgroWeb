@model VendeAgroWeb.Models.Administrador.CategoriasViewModel

@{
    ViewBag.Title = "Administración Categorías";
    Layout = "Shared/_AdministradorLayout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-offset-1 col-sm-10">
        <div class="row">
            <a class="btn btn-success btn-lg btn-sistema" href="/Administrador/NuevaCategoria" id="agregar"><span class="glyphicon glyphicon-plus-sign" style="top: 3px;"></span> <span class="texto">nueva categoría</span></a>
        </div>
        <div class="row" style="margin-top:20px">
            <div class="table-responsive">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th class="hide-modificar-boton"></th>
                            <th class="hide-modificar">Nuevo nombre</th>
                            <th class="hide-modificar"></th>
                            <th class="hide-modificar"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Categorias)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    @{
                                        if (item.NumSubcategorias > 0)
                                        {
                                            <td><a href="/Administrador/SubcategoriasDeCategoria?id=@item.Id" class="btn btn-primary btn-13-caracteres btn-categorias-subcategorias"><span>@item.NumSubcategorias </span>subcategorías</a></td>
                                        }
                                        else
                                        {
                                            <td><a class="btn btn-default btn-13-caracteres btn-categorias-subcategorias" style="cursor:not-allowed;"><span>@item.NumSubcategorias </span>subcategorías</a></td>

                                        }

                                        if (item.NumAnuncios > 0)
                                        {
                                            <td><a href="/Administrador/SubcategoriasDeCategoria?id=@item.Id" class="btn btn-primary btn-8-caracteres btn-categorias-anuncios"><span>@item.NumAnuncios </span>anuncios</a></td>
                                        }
                                        else
                                        {
                                            <td><a class="btn btn-default btn-8-caracteres btn-categorias-anuncios" style="cursor:not-allowed;"><span>@item.NumAnuncios </span>anuncios</a></td>

                                        }

                                        if (item.Activo)
                                        {
                                            <td><a data-id="@item.Id" class="btn btn-danger btn-10-caracteres btn-categorias-desactivar">desactivar</a></td>
                                        }
                                        else
                                        {
                                            <td><a data-id="@item.Id" class="btn btn-success btn-7-caracteres btn-categorias-activar">activar</a></td>
                                        }
                                    }
                                    <td class="hide-modificar-boton"><a class="btn btn-success btn-9-caracteres modificar-boton">modificar</a></td>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <td class="hide-modificar">
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", style = "width: 120px;" } })
                                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                                            </div>
                                        </td>
                                        <td class="hide-modificar">
                                            <div class="form-group">
                                                <input type="submit" value="guardar" class="btn btn-success btn-7-caracteres categorias-guardar" />
                                                <input type="hidden" value="@item.Id" name="Id"/>
                                            </div>
                                        </td>
                                    }
                                    <td class="hide-modificar"><a class="btn btn-default btn-8-caracteres categorias-cancelar">cancelar</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        activaTab('administrador');
    });

    function activaTab(tab) {
        $('.nav-tabs a[href="#' + tab + '"]').tab('show');
    };

    $(".modificar-boton").click(function () {
        $(".hide-cancelar").show();
        $(".hide-modificar").show();
        $(".hide-modificar-boton").hide();
    });

    $(".categorias-cancelar").click(function () {
        $(".hide-modificar").hide();
        $(".hide-modificar-boton").show();
    });

    $(".btn-categorias-desactivar").click(function () {
        var id = $(this).data('id');

        $.ajax({
            type: "POST",
            url: "/Administrador/CambiarEstadoCategoria?id=" + id + "&tipo=" + 0,
            data: {},
            success: function (result) {
                if(result){
                    location.reload();
                }
                else {
                    $('.error-row').show(' ');
                }
            },
            error: function (msg) {
                console.log(msg);
            }
        });
    });

    $(".btn-categorias-activar").click(function () {
        var id = $(this).data('id');

        $.ajax({
            type: "POST",
            url: "/Administrador/CambiarEstadoCategoria?id=" + id + "&tipo=" + 1,
            data: {},
            success: function (result) {
                if (result) {
                    location.reload();
                }
                else {
                    $('.error-row').show(' ');
                }
            },
            error: function (msg) {
                console.log(msg);
            }
        });
    });

