<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VendeAgro </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="body-portal">
    <div class="container administrador body-content">
        <div class="menu-administrador-container">
            <div class="logo-container" style="position:absolute !important;">
                <img class="logo-home" src="~/img/logoHorizontal.png">
            </div>

            <div class="boton-container boton-bienvenido">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle botones-grad nombre-bienvenido-boton" type="button" data-toggle="dropdown">
                        <p>@Startup.GetAplicacionUsuariosManager().getUsuarioPortalActual(Request).Nombre</p>
                        <span class="caret" style="position: absolute; right: 22px; top: 19px; color:white;"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/Portal/Index">Portal</a></li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
                    </ul>
                    @{
                        using (Html.BeginForm("LogOut", "Portal", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <div class="row">
        <div class="col-sm-12">
            @RenderBody()
        </div>
    </div>
</body>
</html>

