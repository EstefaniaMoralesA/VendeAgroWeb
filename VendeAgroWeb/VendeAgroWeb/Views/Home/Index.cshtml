@model VendeAgroWeb.Models.Pagina.HomeViewModel

@{
    ViewBag.Title = "Inicio";
}

<div class="row">
    <div class="col-sm-12">
        <div class="col-sm-12 home-body-container">
            @Html.Partial("_BannerCentral")
            <div class="row">
                <div class="col-sm-3 expander-3">
                    <div class="col-sm-12 busqueda-titulo-container titulos">
                        <h3>Búsqueda</h3>
                    </div>
                </div>
                <div class="col-sm-6 expander-6 destacados-titulo-container titulos">
                    <h3>Destacados</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3 expander-3">
                    <div class="col-sm-12 busqueda-avanzada-container">
                        <div class="row">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle botones-grad busqueda-dropdown" type="button" data-toggle="dropdown">
                                    Categoría
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">CSS</a></li>
                                    <li><a href="#">JavaScript</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle botones-grad busqueda-dropdown" type="button" data-toggle="dropdown">
                                    Subcategoría
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">HTML</a></li>
                                    <li><a href="#">CSS</a></li>
                                    <li><a href="#">JavaScript</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle botones-grad busqueda-dropdown" type="button" data-toggle="dropdown">
                                    País
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">HTML</a></li>
                                    <li><a href="#">CSS</a></li>
                                    <li><a href="#">JavaScript</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle botones-grad busqueda-dropdown" type="button" data-toggle="dropdown">
                                    Estado
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">HTML</a></li>
                                    <li><a href="#">CSS</a></li>
                                    <li><a href="#">JavaScript</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle botones-grad busqueda-dropdown" type="button" data-toggle="dropdown">
                                    Ciudad
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">HTML</a></li>
                                    <li><a href="#">CSS</a></li>
                                    <li><a href="#">JavaScript</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="slider-container">
                                <div class="price-container row">
                                    <p class="precio-izq">$<span id="value-izq">100</span></p>
                                    <p class="precio-der">$<span id="value-der">5000</span></p>
                                </div>
                                <div class="slider" id="slider">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 expander-6 anuncios-container">
                    <img class="loader-anuncios" src="~/img/loader.gif" />
                </div>
                <div class="col-xs-12 anuncios-movil-container">
                    <img class="loader-anuncios" src="~/img/loader.gif" />
                </div>
                <div class="col-sm-3 esconder-banners">
                    @Html.Partial("_BannerLateral")
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/nouislider")

<script>

    $(document).ready(function () {
        $.ajax({
            type: "POST",
            data: {},
            url: '/Home/AnunciosDestacadosPartial',
            success: function (result) {
                $(".anuncios-container").html(result);
            },
            error: function (msg) {
                console.log(msg);
                alert("Error en anuncios desktop: " + msg);
            }
        });

        $.ajax({
            type: "POST",
            data: {},
            url: '/Home/AnunciosDestacadosMovilPartial',
            success: function (result) {
                $(".anuncios-movil-container").html(result);
            },
            error: function (msg) {
                console.log(msg);
                alert("Error en anuncios movil: " + msg);
            }
        });
    });

    var slider = document.getElementById('slider');

    noUiSlider.create(slider, {
        start: [100, 5000],
        step: 50,
        margin: 50,
        connect: true,
        range: {
            'min': 100,
            'max': 5000
        }
    });

    valueIzq = document.getElementById('value-izq'),
    valueDer = document.getElementById('value-der');

    slider.noUiSlider.on('update', function (values, handle) {
        if (!handle) {
            valueIzq.innerHTML = parseFloat(values[handle]).toFixed(0);
        } else {
            valueDer.innerHTML = parseFloat(values[handle]).toFixed(0);
        }
    });

    $(document).ready(function () {
        recalcularTamanos();
    });

    $(window).resize(function () {
        recalcularTamanos();
    });

    function recalcularTamanos() {
        var width = $(window).innerWidth();
        if (width <= 1000) {
            $('.expander-3').removeClass('col-sm-3').addClass('col-sm-4');
            $('.expander-6').removeClass('col-sm-6').addClass('col-sm-8');
            $('.esconder-banners').hide();
            return;
        }
        $('.expander-3').removeClass('col-sm-4').addClass('col-sm-3');
        $('.expander-6').removeClass('col-sm-8').addClass('col-sm-6');
        $('.esconder-banners').show();
    }
</script>
