@model VendeAgroWeb.Models.Pagina.HomeViewModel

@{
    ViewBag.Title = "Inicio";
}

<div class="col-sm-12 home-body-container">
    <div class="row">
        <div class="col-sm-3 busqueda-titulo-container titulos">
            <h3>Búsqueda</h3>
        </div>
        <div class="col-sm-6 destacados-titulo-container titulos">
            <h3>Destacados</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 busqueda-avanzada-container">
            <div class="row">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                        Categoría
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">HTML</a></li>
                        <li><a href="#">CSS</a></li>
                        <li><a href="#">JavaScript</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="dropdown busqueda-dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                        Subcategoría
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">HTML</a></li>
                        <li><a href="#">CSS</a></li>
                        <li><a href="#">JavaScript</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="dropdown busqueda-dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                        Estado
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">HTML</a></li>
                        <li><a href="#">CSS</a></li>
                        <li><a href="#">JavaScript</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="dropdown busqueda-dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                        Ciudad
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">HTML</a></li>
                        <li><a href="#">CSS</a></li>
                        <li><a href="#">JavaScript</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="slider-container">
                    <div class="price-container row">
                        <p class="precio-izq">$<span id="value-izq">100</span></p>
                        <p class="precio-der">$<span id="value-der">5000</span></p>
                    </div>
                    <div class="slider" id="slider">

                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 anuncios-container">
            @Html.Partial("_Anuncios")
        </div>
        <div class="col-sm-3">
            @Html.Partial("_BannerLateral")
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/nouislider")

<script>
    var slider = document.getElementById('slider');

    noUiSlider.create(slider, {
        start: [100, 5000],
        step: 50,
        margin: 50,
        connect: true,
        range: {
            'min': 100,
            'max': 5000
        }
    });

    valueIzq = document.getElementById('value-izq'),
	valueDer = document.getElementById('value-der');

    slider.noUiSlider.on('update', function (values, handle) {
        if (!handle) {
            valueIzq.innerHTML = parseFloat(values[handle]).toFixed(0);
        } else {
            valueDer.innerHTML = parseFloat(values[handle]).toFixed(0);
        }
    });
</script>